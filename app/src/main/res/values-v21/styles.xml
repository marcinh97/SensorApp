<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="cardColor">#ff9c22</item>
        <item name="cardFrame">#74450b</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="inputLettersColor">#000000</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Base application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="cardColor">@color/colorPrimaryDark</item>
        <item name="cardFrame">@color/colorPrimaryDark</item>
        <item name="backgroundColor">#000000</item>
        <item name="inputLettersColor">#ffffff</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterTransition">@android:anim/fade_in</item>
        <item name="android:windowExitTransition">@android:anim/fade_out</item>
    </style>

</resources>
